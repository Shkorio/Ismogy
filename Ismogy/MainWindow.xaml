<Window x:Class="Ismogy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ismogy"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="345">
    <Grid>
        <TextBox x:Name="txt_login" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Width="142"/>
        <TextBox x:Name="txt_password" HorizontalAlignment="Center" VerticalAlignment="Top" TextWrapping="Wrap" Width="142" Margin="0,258,0,0"/>
        <Label Content="Логин" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="37,0,0,0" />
        <Label Content="Пароль" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="37,254,0,0" />
        <Label Content="Авторизация" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,161,0,0" Width="86" />

        <Button Content="Войти" Click="Sign" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,308,0,0" Width="86" Height="33"/>
    </Grid>
</Window>
